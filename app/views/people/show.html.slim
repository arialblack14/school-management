.page-header
  = link_to index_path_for(@person), class: 'btn btn-default' do
    span.glyphicon.glyphicon-list-alt
    |  Liste
  => link_to @person, method: :delete, data: { confirm: t('.confirm_delete') }, class: 'btn btn-danger' do
    span.glyphicon.glyphicon-remove
    |  LÃ¶schen
  => link_to edit_person_path(@person), class: 'btn btn-primary' do
    span.glyphicon.glyphicon-pencil
    |  Bearbeiten
  = render 'people/person_header'

-if @person == current_user
  h3 Das bin ich

= render @person
.row
  .col-md-6
    - if @person.login
      = render @person.login
    - else
      .panel.panel-default
        .panel-heading Login
        .panel-body = link_to 'Login erstellen', new_person_login_path(@person)

  /.col-md-6
    .panel.panel-default
      .panel-heading Funktionen
      .panel-body
        /- if @person.manager?
          |  Manager
          /= link_to 'Manager', @person.as_manager
        /- if @person.teacher?
          = link_to 'Lehrer', @person.as_teacher
= render @person.as_student if @person.student?
= render @person.as_teacher if @person.teacher?
= render @person.as_manager if @person.manager?
