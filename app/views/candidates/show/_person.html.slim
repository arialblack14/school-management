.panel.panel-default.person
  .panel-heading
    h4.panel-title
      |  Bewerberdaten
      ul.list-inline.pull-right
        li: span.label.label-success âœ“ angelegt
        li = link_to edit_candidate_path(@candidate), class: 'btn btn-default btn-xs' do
          span.glyphicon.glyphicon-cog>
          | Bearbeiten
  .panel-body
    .row
      .col-md-4
        p
          => { 'f' => 'Frau', 'm' => 'Herr' }[person.gender]
          => person.first_name
          = person.last_name
        p
          label geb.
          - if person.date_of_birth.present?
            =< l person.date_of_birth
          =< person.place_of_birth


      .col-md-4
        - address = person.address
        p = address.street
        p
          => address.zip
          = address.city

      .col-md-4
        p
          label.icon
            span.glyphicon.glyphicon-envelope
          - email = person.contact.email
          =< link_to email, "mailto:#{email}"
        p
          label.icon
            span.glyphicon.glyphicon-earphone
          =< person.contact.phone
        p
          label.icon
            span.glyphicon.glyphicon-phone
          =< person.contact.mobile

    - if @candidate.notes.present?
      .row: .col-md-12 = @candidate.notes
