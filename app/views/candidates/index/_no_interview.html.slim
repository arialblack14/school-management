- if candidates.nil?
  label Keine Bewerber in dieser Ansicht
- else
  label #{candidates.count} Bewerber ohne KLT
  table.table.table-striped.table-hover.table-condensed.table-bordered
    thead
      tr
        th Eingang
        th Vorname
        th Nachname
        th Ort
        th E-Mail
    tbody
      - candidates.each do | candidate |
        tr class=({accepted: :success, rejected: :danger}[candidate.status.to_sym]) class=candidate.status
          td = l(candidate.date, format: :short) if candidate.date.present?
          td = link_to candidate.person.first_name, candidate
          td = link_to candidate.person.last_name, candidate
          td = candidate.person.address.city
          td = candidate.person.contact.email

  p = link_to candidates_path(format: :csv, interview_date: 'none'), class: 'btn btn-default' do
      span.glyphicon.glyphicon-export>
      | Exportieren
