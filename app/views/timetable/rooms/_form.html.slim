= simple_form_for(@room, html: { role: "form" }, defaults: { required: false, include_blank: false }) do |f|
  - if @room.errors.any?
    .alert.alert-danger.alert-dismissable@alert
      button.close type="button" data-dismiss="alert"
        span aria-hidden="true" &times;
        span.sr-only Close
      h4 = t('.error')

  .row
    .col-md-6
      .panel.panel-default
        .panel-heading = Timetable::Room.model_name.human
        .panel-body
          = f.input :name
          = f.input :comments

  .row.action-buttons
    .col-md-6
      .pull-right
        => link_to t(:cancel), 'javascript: window.history.back();', class: 'btn btn-default'
        = f.submit t(:save), class: 'btn btn-primary'
