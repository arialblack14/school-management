.row
  .col-md-3
    h3 Filter
    form.form-horizontal action=internship_positions_url
      .form-group
        select.form-control name="city"
          option selected=(params[:city].blank?) value='' Ort
          - @cities.each do |city|
            option selected=(city == params[:city]) value=city = city
      .form-group
        label.control-label Unterkunft
        br
        .btn-group data-toggle="buttons"
          label.btn.btn-default class=('active' if params[:housing].blank?)
            input type="radio" name="housing" autocomplete="off" value=""    checked=params[:housing].blank? alle
          label.btn.btn-default class=('active' if params[:housing] == 'yes')
            input type="radio" name="housing" autocomplete="off" value="yes" checked=(params[:housing]=='yes') mit
          label.btn.btn-default class=('active' if params[:housing] == 'no')
            input type="radio" name="housing" autocomplete="off" value="no"  checked=(params[:housing]=='no') ohne
        /.checkbox
          label
            input name="housing" type="checkbox" checked=params[:housing] Mit Unterkunft
      .form-group
        .checkbox
          label
            input name="by_email" type="checkbox" checked=params[:by_email] Bewerbung per E-Mail
      .row
        .form-group
          .col-md-6
            button.btn.btn-default.btn-block name="submit" value="clear" type="submit" Alle
          .col-md-6
            button.btn.btn-primary.btn-block name="submit" value="filter" type="submit" Suchen
  .col-md-9
    h3
      => @internship_positions.size
      'Praktikumsplätze gefunden
    table.table.table-hover.table-striped.table-condensed
      thead
        tr
          /th Arbeitsfeld
          th Träger
          th Einrichtung
          th width="500" Beschreibung
          th Ort
          th Unterkunft
      tbody
        - @internship_positions.each do |internship_position|
          - internship_offer = internship_position.internship_offer
          - organisation = internship_offer.organisation
          tr
            /td = link_to internship_position.name, internship_position
            /td = internship_offer.work_area
            td = link_to organisation.name, internship_position
            td = link_to internship_offer.name, internship_position
            - description = truncate(internship_offer.description, length: 200)
            td = description.gsub("\n", '<br>').html_safe if description.present?
            td = internship_offer.address.city
            td = bool_icon internship_offer.housing.provided
